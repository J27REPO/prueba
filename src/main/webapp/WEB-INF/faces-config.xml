<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
        https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd"
    version="4.0">

    <!-- CONFIGURACIÓN DE INTERNACIONALIZACIÓN -->
    <application>
        <!-- Archivo de mensajes base -->
        <resource-bundle>
            <base-name>es.tew.Messages</base-name>
            <var>msg</var>
        </resource-bundle>
        
        <!-- Locales soportados -->
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>es</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>

    <!-- REGLAS DE NAVEGACIÓN -->
    
    <!-- Navegación desde login -->
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        
        <navigation-case>
            <from-outcome>listado</from-outcome>
            <to-view-id>/listado.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!-- Navegación general (logout) -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navegación desde listado -->
    <navigation-rule>
        <from-view-id>/listado.xhtml</from-view-id>
        
        <navigation-case>
            <from-outcome>detalle</from-outcome>
            <to-view-id>/detalle.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>crearIncidencia</from-outcome>
            <to-view-id>/crearIncidencia.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navegación funcionalidades admin -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        
        <navigation-case>
            <from-outcome>altaUsuario</from-outcome>
            <to-view-id>/admin/altaUsuario.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>listarUsuarios</from-outcome>
            <to-view-id>/admin/listarUsuarios.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>estadisticas</from-outcome>
            <to-view-id>/admin/estadisticas.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>todasIncidencias</from-outcome>
            <to-view-id>/admin/todasIncidencias.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>